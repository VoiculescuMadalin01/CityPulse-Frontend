{
	"workbench.colorCustomizations": {
		"titleBar.activeBackground": "#2ecc71", // Verde smarald
		"titleBar.inactiveBackground": "#27ae60", // Verde închis
		"titleBar.activeForeground": "#ffffff", // Alb
		"titleBar.inactiveForeground": "#ffffff", // Alb
		"activityBar.background": "#2ecc71", // Verde smarald
		"activityBar.foreground": "#ffffff", // Alb
		"activityBar.inactiveForeground": "#ffffff", // Gri deschis
		"activityBar.activeBorder": "#1abc9c", // Verde turcoaz
		"activityBarBadge.background": "#27ae60", // Verde închis
		"activityBarBadge.foreground": "#ffffff", // Alb
		"icon.foreground": "#ffffff" // Verde smarald
	},
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.formatOnPaste": true, // required
	"editor.formatOnType": false, // required
	"editor.formatOnSave": true, // optional
	"editor.formatOnSaveMode": "file", // required to format on save
	"files.autoSave": "onFocusChange", // optional but recommended
	"eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode",
		"editor.formatOnSave": true
	}
}
